<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<default-config>
	      <!-- 连接超时设置30秒 -->
        <property name="checkoutTimeout">30000</property>
        <!-- 30秒检查一次connection的空闲   -->
        <property name="idleConnectionTestPeriod">30</property>
        <!-- 初始化的池大小    -->
        <property name="initialPoolSize">2</property>
        <!--  最多的一个connection空闲时间     -->
        <property name="maxIdleTime">0</property>
        <!-- 最多可以有多少个连接connection   -->
        <property name="maxPoolSize">5</property>
        <!--   最少的池中有几个连接   -->
        <property name="minPoolSize">2</property>
        <!-- 批处理的语句   -->
        <property name="maxStatements">50</property>
        <!-- 每次增长几个连接   -->
        <property name="acquireIncrement">3</property>

    <property name="jdbcUrl">jdbc:oracle:thin:@localhost:1521:orcl</property>
		<property name="user">USER_JX190220</property>
		<property name="password">USER_JX190220</property>
		<property name="driverClass">oracle.jdbc.OracleDriver</property>

		<!--<property name="jdbcUrl">jdbc:sqlite:c://jingjia.db</property>
		<property name="driverClass">org.sqlite.JDBC</property>-->



	</default-config>
</c3p0-config>
